
<%= link_to 'Создать тест', new_test_path, class: 'btn btn-default', style: 'margin-bottom: 10px' %>

<table class="table table-striped table-bordered " >
  <tr>
    <th>Название</th>
    <th>Ссылка</th>
    <th>Вопросы</th>
    <th>Результаты</th>
    <th style="width:250px;"> Действия </th>
  </tr>

  <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, test_path(test)  %></td>
        <td> <%= link_to 'Ссылка', test_result_path(test.id) %> </td>
        <td> <%= test.questions.count %> </td>
        <td><%= link_to test.results.count, result_path(test.id)  %></td>
        <td>
          <%= link_to edit_test_path(test), class: 'btn btn-warning btn-xs' do %>
              Редактировать
              <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to test_path(test), class: 'btn btn-danger btn-xs',
                      data: {confirm: "Вы уверены что хотите удалить: #{test.name}?"}, method: :delete do %>
              Удалить
              <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>
