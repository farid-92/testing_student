<h1><%= yield(:button_text) %> на вопрос '<%= @question.content  %>'</h1>

<%= form_for [@test, @question, @answer] do |form| %>

    <div class="form-group  <%= 'has-error' if @question.errors[:content].any? %>">
      <%= form.label :content, class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= form.text_area :content, placeholder: 'Сюда напишите ваш вопрос', class: 'form-control' %>
        <%= render 'shared/field_errors', object: @question, field_name: :name %>
      </div>
    </div>
    <div class="form-group  <%= 'has-error' if @question.errors[:content].any? %>">
      <%= form.label :correct,'Is correct?', class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= form.check_box :correct,{}, checked_value = "1", unchecked_value = "0" %>
        <%= render 'shared/field_errors', object: @question, field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= form.submit yield(:button_text), class: 'btn btn-primary' %>
        <%= link_to 'Отмена', test_question_path(@test,@question.id), class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>
