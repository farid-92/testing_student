<h1><%= @question.content %></h1>

<%= link_to 'Добавить ответ', new_test_question_answer_path(@test.id,@question.id), class: 'btn btn-primary ', style: 'margin-bottom: 10px' %>


<table class="table table-striped table-bordered " >
  <tr>
    <th>#</th>
    <th>Ответ</th>
    <th>Is correct</th>
    <th style="width:250px;"> Действия </th>
  </tr>

  <% @answers.each do |answer| %>
      <tr>
        <td>1</td>
        <td><%=  answer.content  %></td>
        <td> <%= answer.correct  %> </td>
        <td>
          <%= link_to edit_test_question_answer_path(@test.id, @question.id,answer.id), class: 'btn btn-warning btn-xs' do %>
              Редактировать
              <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to test_question_answer_path(@test.id, @question.id,answer.id), class: 'btn btn-danger btn-xs',
                      data: {confirm: "Вы уверены что хотите удалить: #{answer.content}?"}, method: :delete do %>
              Удалить
              <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>


<br>
<%= link_to 'Назад', test_path(@test) %>