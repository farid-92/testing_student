<h1><%= yield(:button_text) %></h1>

<%= form_for [@test, @question] do |q| %>

    <div class="form-group  <%= 'has-error' if @question.errors[:content].any? %>">
      <%= q.label :content, class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= q.text_area :content, placeholder: 'Сюда напишите ваш вопрос', class: 'form-control' %>
        <%= render 'shared/field_errors', object: @question, field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= q.submit yield(:button_text), class: 'btn btn-primary' %>
        <%= link_to 'Отмена', test_path(@test), class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>
